            new Invoice { InvoiceNumber = "345345", Date = new DateTime(2018, 10, 30), DueDate = new DateTime(2018, 10, 30), InvoiceTotal = 20.00m, AmountDue = 20.00m, Terms = Terms, Description = Description, PONumber = PONumber}
