<div class="top-row"></div>
<div class="top-row-toggler navbar">
    <div class="container-fluid">
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item"></div>
        <div class="nav-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Select & Pay
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link" href="quickpayment">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Quick Payment
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link" href="autopayments">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Auto Payments
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link" href="reports">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Reports
            </NavLink>
        </div>
        <div class="nav-item">
            <NavLink class="nav-link" href="myaccount">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> My Account
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
