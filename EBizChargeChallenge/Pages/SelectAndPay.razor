@page "/"
@using EBizChargeChallenge.Data.Models;
@using EBizChargeChallenge.Componets;

<div class="header">
    <h3>Welcome back, Rebecca. Here is a summary of your account.</h3>
    <div class="summary-cards">
        @foreach (var card in cards)
        {
            <SummaryCard CardDetails="card" />
        }
    </div>
</div>
<div class="invoice-table-container">
    <div class="step-number-1"></div>
    <span>Select invoices to pay:</span>
    
    <Invoices />
</div>

<div class="payment-method-container">
    <div class="step-number-2"></div>
    <span>Select a payment method:</span>
    <PaymentMethod />
</div>


@code {
    List<Card> cards = new List<Card> {
        new Card { CardTitle = "Total amount due", CardValue = "$4,120.23" },
        new Card { CardTitle = "Open invoices", CardValue = "13" },
        new Card { CardTitle = "Open sales orders", CardValue = "2" },
        new Card { CardTitle = "Saved payment methods", CardValue = "4" },
        new Card { CardTitle = "Auto pay", CardValue = "On" }
    };
    
}
